// Defines "email", "name" and "birthday" as module input parameters.
[
	{
		"name": "model",
		"type": "select",
		"label": "Model",
		"required": true,
		"options": "rpc://getModels"
	},
	{
		"name": "messages",
		"type": "array",
		"label": "Messages",
		"required": true,
		"spec": {
			"type": "collection",
			"spec": [
				{
					"name": "role",
					"type": "select",
					"label": "Role",
					"options": [
						{
							"label": "User",
							"value": "user"
						},
						{
							"label": "System",
							"value": "system"
						},
						{
							"label": "Assistant",
							"value": "assistant"
						}
					]
				},
				{
					"name": "content",
					"type": "text",
					"label": "Content"
				}
			]
		},
		"help": "The first message should be User or System."
	},
	{
		"name": "temperature",
		"type": "number",
		"label": "Temperature",
		"default": 0.7,
		"required": false
	},
	{
		"name": "top_p",
		"type": "number",
		"label": "Top P",
		"default": 1,
		"required": false,
		"advanced": true
	},
	{
		"name": "max_tokens",
		"type": "integer",
		"label": "Max Tokens",
		"required": false,
		"validate": {
			"min": 0
		},
		"advanced": true
	} /*,
    {
        "name": "stream",
        "type": "boolean",
        "label": "Stream",
        "default": false,
        "required": false
    }*/,
	{
		"name": "safe_prompt",
		"type": "boolean",
		"label": "Safe Mode",
		"required": false,
        "default": false,
		"help": "Whether to inject a safety prompt before all conversations.",
		"advanced": true
	},
	{
		"name": "random_seed",
		"type": "integer",
		"label": "Random Seed",
		"required": false,
		"help": "The seed to use for random sampling. If set, different calls will generate deterministic results.",
		"advanced": true
	},
    {
        "name":"stop",
        "type":"text",
        "label":"Stop",
        "help":"Stop generation if this token is detected.",
        "advanced": true
    },
	{
		"name": "response_format",
		"type": "collection",
		"label": "Response Format",
		"spec": [
			{
				"name": "type",
				"type": "select",
				"label": "Type",
				"options": [
					{ "value": "text", "label": "Text" },
					{ "value": "json_object", "label": "JSON" }
				],
                "default": "text"
			}
		],
		"help": "When using JSON mode you MUST also instruct the model to produce JSON yourself with a system or a user message.",
        "advanced": true
	},
	{
		"name": "tools",
		"type": "any",
		"label": "Tools",
		"advanced": true
	},
	{
		"name": "tool_choice",
		"type": "select",
		"label": "Tool Choice",
		"advanced": true,
        "options":[
            {"value":"auto","label":"Auto"},
            {"value":"none","label":"None"},
            {"value":"any","label":"Any"}
        ]
	}
]

